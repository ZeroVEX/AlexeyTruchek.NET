@model IEnumerable<BLL.DTO.IngredientDTO>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Ингредиенты</title>
</head>
<body>
    <h3>Ингредиенты</h3>
    <table>
        <tr>
            <td>ID</td>
            <td>Название</td>
            <td></td>
        </tr>
        @foreach (var one in Model)
        {
            <tr>
                <td>@one.ID</td>
                <td>@one.Title</td>
            </tr>
        }
    </table>
    <a href="~/Home/AddIngredient">Добавить</a>
</body>
</html>