@model IEnumerable<BLL.DTO.RecipeDTO>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Рецепты</title>
</head>
<body>
    <h3>Рецепты</h3>
    <table>
        <tr>
            <td>ID</td>
            <td>ID продукта</td>
            <td>ID ингредиента</td>
            <td>Количество</td>
            <td></td>
        </tr>
        @foreach (var one in Model)
        {
            <tr>
                <td>@one.ID</td>
                <td>@one.ProductID</td>
                <td>@one.IngredientID</td>
                <td>@one.Quantity</td>
            </tr>
        }
    </table>
    <a href="~/Home/AddRecipe">Добавить</a>
</body>
</html>