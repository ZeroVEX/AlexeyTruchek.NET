@model BLL.DTO.ProductDTO
@{
    ViewData["Title"] = "Поиск продукта";
}

<div>
    <h3>Форма поиска продукта</h3>
    <p>Для поиска продукта введите его ID:</p>
    <form method="post">
        <table>
            <tr>
                <td>ID:</td>
                <td><input type="number" name="ID" /> </td>
            </tr>
            <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
        </table>
    </form>
    @if (Model != null)
    {
        <table>
            <tr>
                <td>ID</td>
                <td>Название</td>
                <td></td>
            </tr>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.Title</td>
            </tr>
        </table>
    }
</div>