@model IEnumerable<BLL.DTO.OrderDTO>
@{
    ViewData["Title"] = "Список заказов";
}

<h3>Заказы</h3>
<table>
    <tr>
        <td>ID</td>
        <td>ID пользователя</td>
        <td>ID продукта</td>
        <td>Количество</td>
        <td>Дата</td>
        <td></td>
    </tr>
    @foreach (var one in Model)
    {
        <tr>
            <td>@one.ID</td>
            <td>@one.UserID</td>
            <td>@one.ProductID</td>
            <td>@one.Quantity</td>
            <td>@one.Date</td>
        </tr>
    }
</table>
<a href="~/Orders/AddOrder">Добавить</a>
<a href="~/Orders/DeleteOrder">Удалить</a>
<a href="~/Orders/SearchOrder">Поиск</a>
<a href="~/Orders/UpdateOrder">Обновление данных</a>