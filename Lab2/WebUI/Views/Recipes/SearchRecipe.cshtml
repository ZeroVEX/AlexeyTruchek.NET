@model IEnumerable<BLL.DTO.RecipeDTO>
@{
    ViewData["Title"] = "Поиск рецептов";
}

<div>
    <h3>Форма поиска рецепта</h3>
    <p>Для поиска рецепта введите ID продукта:</p>
    <form method="post">
        <table>
            <tr>
                <td>ID:</td>
                <td><input type="number" name="ID" /> </td>
            </tr>
            <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
        </table>
    </form>
    @if (Model != null)
    {
        <table>
            <tr>
                <td>ID</td>
                <td>ID продукта</td>
                <td>ID ингредиента</td>
                <td>Количество</td>
                <td></td>
            </tr>
            @foreach (var one in Model)
            {
                <tr>
                    <td>@one.ID</td>
                    <td>@one.ProductID</td>
                    <td>@one.IngredientID</td>
                    <td>@one.Quantity</td>
                </tr>
            }
        </table>
    }
</div>