@model IEnumerable<BLL.DTO.RecipeDTO>
@using BLL.DTO
@{
    ViewData["Title"] = "Поиск рецептов";
}

<div>
    <h3>Форма поиска рецепта</h3>
    <p>Для поиска рецепта введите ID продукта:</p>
    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <td>ID:</td>
                <td><input type="number" name="ID" /></td>
            </tr>
            <tr><td><input type="submit" value="Отправить" /></td></tr>
        </table>
    }
    @if (Model != null)
    {
        @Html.CreateList(Model)
    }
</div>