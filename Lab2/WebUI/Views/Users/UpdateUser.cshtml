@{
    ViewData["Title"] = "Обновление данных пользователя";
}

<div>
    <h3>Форма обновления данных пользователя</h3>
    <p>Введите ID и новые данные пользователя:</p>
    <form method="post">
        <table>
            <tr>
                <td>ID:</td>
                <td><input type="number" name="ID" /> </td>
            </tr>
            <tr>
                <td>Логин:</td>
                <td><input type="text" name="Login" /> </td>
            </tr>
            <tr>
                <td>Пароль:</td>
                <td><input type="text" name="Password" /></td>
            </tr>
            <tr>
                <td>Название компании:</td>
                <td><input type="text" name="CompanyName" /></td>
            </tr>
            <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
        </table>
    </form>
</div>